<%- include("header")-%>

    <body>
        <div class="box" id="heading">
            <h2>It's a <%= listType %>
            </h2>
        </div>

        <div class="box">


            <%for(var i=0 ; i<newItem.length;i++){%>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= newItem[i] %>
                    </p>
                </div>
                <%}%>

                    <form class="item" action="/" method="post">
                        <br><input type="text" name="add" placeholder="New Item" autocomplete="off"><br>
                        <button type="submit" name="button" value=<%=listType %>>+</button>
                    </form>
        </div>


    </body>
    <%- include("footer")-%>

        </html>