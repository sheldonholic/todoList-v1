<%- include("header")-%>

    <body>
        <div class="box" id="heading">
            <h2>It's a <%= listType %>
            </h2>
        </div>

        <div class="box">

            <%newItem.forEach(function(item){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="done" value="<%= item.name%>" onchange="this.form.submit()">
                        <p>
                            <%= item.name %>
                        </p>
                    </div>
                    <input type="hidden" name="listname" value="<%= listType%>">
                </form>
                <%})%>


                    <form class="item" action="/" method="post">
                        <br><input type="text" name="add" placeholder="New Item" autocomplete="off"><br>
                        <button type="submit" name="button" value=<%=listType %>>+</button>
                    </form>
        </div>


    </body>
    <%- include("footer")-%>

        </html>